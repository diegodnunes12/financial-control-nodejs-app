{{> head}}
<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="jumbotron mt-2">
                    <div class="text-center">
                        
                        <h5>Saldo</h5>
                        <h3>R$ 1.500,00</h3>
                    </div>
                    <div class="row">
                        <div class="col-6 text-center">
                            <div class="media position-relative">
                                <img src="/images/up.svg" class="mr-1">
                                <div class="media-body">
                                    <h5 class="mt-0">Receita</h5>
                                    <p>R$ 2.000,00</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 text-center">
                            <div class="media position-relative">
                                <img src="/images/down.svg" class="mr-1">
                                <div class="media-body">
                                    <h5 class="mt-0">Despeza</h5>
                                    <p>R$ 2.000,00</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <button id="newOrder" class="btn btn-primary"><img src="images/add.svg"> novo</button>
            </div>
            <div class="col-12">
                <form action="addOrder" method="post">
                    <div class="form-group">
                        <label for="date">Tipo</label>
                        <select class="form-control" id="revenue" name="revenue">
                            <option></option>
                            <option value="true">Entrada</option>
                            <option value="false">Saída</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="date">Data</label>
                        <input type="date" class="form-control" id="date" name="date">
                    </div>
                    <div class="form-group">
                        <label for="name">Descrição</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="form-group">
                        <label for="value">Valor</label>
                        <input type="number" class="form-control" id="value" name="value">
                    </div>

                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="settled" name="settled">
                        <label class="custom-control-label" for="settled">Lançamento pago</label>
                    </div>
                    <div class="form-group">
                        <label for="description">Observações</label>
                        <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</section>
{{> footer}}